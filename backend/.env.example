# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration (Docker)
MONGODB_URI=mongodb://admin:mongodb_password_123@localhost:27017/interactive_qa_db?authSource=admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname

# Redis Configuration (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
# Alternative format: REDIS_URL=redis://:redis_password_123@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRE=7d

# Socket.io/CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100